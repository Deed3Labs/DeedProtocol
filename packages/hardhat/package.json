{
  "name": "@deed-protocol/hardhat",
  "version": "0.1.0",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "compile": "hardhat compile",
    "deploy:local": "hardhat deploy --network localhost --tags core",
    "deploy-proxy:local": "hardhat run scripts/reset-proxy.ts --network localhost && hardhat deploy --network localhost --tags core",
    "deploy:gnosis": "hardhat deploy --network gnosis && yarn verify --network gnosis",
    "deploy:sepolia": "hardhat deploy --network sepolia --tags core",
    "deploy-proxy:sepolia": "hardhat run scripts/reset-proxy.ts --network sepolia && hardhat deploy --network sepolia --tags core",
    "deploy:polygon": "hardhat deploy --network polygon --tags core",
    "deploy-proxy:polygon": "hardhat run scripts/reset-proxy.ts --network polygon && hardhat deploy --network polygon --tags core",
    "deploy:arbitrum": "hardhat deploy --network arbitrum --tags core",
    "deploy-proxy:arbitrum": "hardhat run scripts/reset-proxy.ts --network arbitrum && hardhat deploy --network arbitrum --tags core",
    "deploy-mocks:local": "hardhat deploy --network localhost --tags mocks",
    "deploy-mocks:polygon": "hardhat deploy --network polygon --tags mocks",
    "deploy-mocks:arbitrum": "hardhat deploy --network arbitrum --tags mocks",
    "deploy:generateTsAbi": "hardhat deploy --tags generateTsAbis --network",
    "coverage": "hardhat coverage --testfiles \"test/*.spec.ts\" --solcoverjs ./test/coverage.solcover.ts",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "generate": "hardhat run scripts/generateAccount.ts",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
    "test": "hardhat test --network hardhat",
    "verify": "hardhat verify",
    "verify:sepolia": "yarn verify --network sepolia",
    "verify:polygon": "yarn verify --network polygon",
    "verify:arbitrum": "yarn verify --network arbitrum"
  },
  "devDependencies": {
    "@eth-optimism/hardhat-ovm": "^0.2.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/eslint": "^8",
    "@types/mocha": "^9.1.1",
    "@types/prettier": "^2",
    "@types/qrcode": "^1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.2",
    "hardhat-deploy": "^0.11.26",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.4",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "envfile": "^6.18.0",
    "global": "^4.4.0",
    "graph": "^0.2.0",
    "qrcode": "^1.5.1"
  }
}